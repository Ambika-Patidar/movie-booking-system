<div class="container movies">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class = "col-md-3" >
        <div class="card" style="width: 18rem;">
          <img src="<%= movie.thumbnail_url %>" class="card-img-top" alt="<%= movie.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= movie.name %></h5>
            <p class="card-text"><%= movie.description.truncate(75) %></p>
            <%= link_to "Shows", '', class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
